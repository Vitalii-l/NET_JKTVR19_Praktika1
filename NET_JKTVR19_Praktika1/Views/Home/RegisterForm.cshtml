@model NET_JKTVR19_Praktika1.Models.GuestResponse

@{
    ViewBag.Title = "RegisterForm";
}

<h2>RegisterForm</h2>
@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Your name*:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>E-mail*:</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Phone*:</label>
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Вас ждать на вечеринке?*</label>
        @Html.DropDownListFor(x=>x.WillAttend,
        new[]
        {
        new SelectListItem(){Text="Да, прийду", Value=bool.TrueString},
        new SelectListItem(){Text="Нет, не могу", Value=bool.FalseString}
        },"Ваш выбор?", new { @class = "form-control" }
        )
    </div>
    <div class="text-center">
        <input type="submit" value="Send answer" class="btn btn-warning" />
    </div>
}

